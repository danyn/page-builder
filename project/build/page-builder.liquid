{% schema %}
{
    "name": "Page Builder",
    "class": "index-section",
    "blocks": [
			
{
				"type": "pb_txt",
        "name": "Text with a button",
        "settings": [

            {
              "type": "text",
              "id": "title",
              "label": "Heading",
              "default": "Image with text"
            },
            {
              "type": "richtext",
              "id": "text",
              "label": "Text",
              "default": "<p>Pair large text with an image to give focus to your chosen product, collection, or blog post. Add details on availability, style, or even provide a review.</p>"
            },
            {
              "type": "text",
              "id": "button_label",
              "label": "Button label"
            },
            {
              "type": "url",
              "id": "button_link",
              "label": "Button link"
            }
			
			]
	  }
					

]
}
{% endschema %}

